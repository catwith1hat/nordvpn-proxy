#!/bin/bash
set -e -u -o pipefail

#Variables

[[ -f /etc/service/utils.sh ]] && source /etc/service/utils.sh || true

SOCKET="unix-connect:/run/openvpn.sock"

log "########################################################"
log "INFO: openvpn: stopping"
(echo "signal SIGHUP";sleep 1)| socat -s - ${SOCKET}
